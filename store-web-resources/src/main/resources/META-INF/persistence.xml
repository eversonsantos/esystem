<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="storeweb">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<class>br.com.storeweb.model.Usuario</class>
	<class>br.com.storeweb.model.Produto</class>
	<class>br.com.storeweb.model.EntityDefault</class>
	<class>br.com.storeweb.model.Contato</class>
	<class>br.com.storeweb.model.Pessoa</class>
	<class>br.com.storeweb.model.Telefone</class>
	<class>br.com.storeweb.model.PessoaFisica</class>
	<class>br.com.storeweb.model.Pais</class>
	<class>br.com.storeweb.model.Estado</class>
	<class>br.com.storeweb.model.Endereco</class>
		<properties>
			<property name="hibernate.archive.autodetection" value="class"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/storeweb" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="admin" />
		</properties>
	</persistence-unit>
</persistence>

